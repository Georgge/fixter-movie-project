/// RESET
*
  margin: 0
  padding: 0
  font-family: 'Sarabun', sans-serif

a
  text-decoration: none
  display: inline-block




/// VARIABLES
$headerHeight = 104px
$buttonWidth = 144px
$buttonHeight = 36px
$generalPadding = 12px
$generalMargin = 6px

// -> colors
$black = #535962
$white = #dfe2e2
$blue = #1cb3c8
$silver = #738598
$red = #ff5959

$background = $white
$texColor = $black




/// GENERAL CLASES
.link
  color: $blue
  font-size: 1.2rem

.button
.button-red
  width: auto
  min-width: $buttonWidth
  height: $buttonHeight
  background-color: $blue
  color: $white
  padding-left: $generalPadding
  padding-right: $generalPadding
  text-align: center
  line-height: $buttonHeight
  border-radius: 2px
  margin-left: $generalMargin
  margin-right: $generalMargin
  font-size: 1rem
  text-transform: uppercase
  font-weight: 600
  display: inline-block
  cursor: pointer

  &:hover
    color: $texColor

.button-red
  background-color: $red

.section-button
  width: 100%
  text-align: center

// -> Field container
.field
  width: 40%
  display: flex
  justify-content: flex-start
  padding: $generalPadding
  margin-bottom: ($generalMargin * 7)

  &-in-select
    width: 100%
    font-size: 0.7rem
    color: $texColor
    display: flex
    justify-content: flex-start
    flex-wrap: wrap

    >div
      display: inline-block
      &:before
        content: ',  '
      &:first-child
        &:before
          content: ''

  &-label
    display: flex
    justify-content: flex-start
    flex-wrap: wrap
    width: 100%
    color: $blue
    font-size: 1.1rem

    >input
    >select
      margin-top: $generalMargin
      min-width: 100%
      height: $buttonHeight
      border-bottom: 1px solid $silver
      border-top: none
      border-left: none 
      border-right: none
      background-color: rgba(0, 0, 0, 0)
      font-size: 1.3rem
      color: $texColor

      &:focus
        outline: none




/// SPESIFIC CLAsSES
.wrapper
  width: 100vw
  min-height: 100vh
  box-sizing: border-box

.header
  min-width: 100%
  height: $headerHeight
  text-align: center

  &-title
    font-family: 'Open sans'
    width: 100%
    height: 100%
    line-height: $headerHeight
    color: $texColor




/// Home
.home
  min-height: 100vh
  width: 100%
  background-color: $background
  display: flex
  justify-content: center
  align-items: center

  &-title
    font-family: 'Open sans'
    color: $texColor
    font-size: 2rem

  &-buttons
    display: flex
    justify-content: center
    padding-top: $generalPadding




/// Create
.create-page
  min-height: 100vh
  width: 100%
  background-color: $background

.form
  margin-top: $generalMargin * 2
  width: 100%
  padding: $generalPadding
  box-sizing: border-box
  display: flex
  justify-content: center

  &-fields
    min-width: 90%
    display: flex
    justify-content: space-around
    flex-wrap: wrap
    margin-bottom: ($generalMargin * 7)

  &-data-container
    width: 80%
    padding: $generalPadding
    margin-top: $generalMargin * 2
    display: flex
    justify-content: center
    flex-wrap: wrap




/// List
.list-wrapper
  width: 100vw
  min-height: 100vh
  background-color: $background
  display: flex
  justify-content: center
  flex-wrap: wrap

.list-container
  margin-top: ($generalMargin * 7)
  width: 80%
  min-height: 500px
  display: flex
  justify-content: space-between
  flex-wrap: wrap




/// CARDS
.celebrity-card
  width: 200px
  height: 250px
  padding: $generalPadding
  box-sizing: border-box
  background-color: #fff
  cursor: pointer
  margin: ($generalMargin * 2)

  &-photo
    width: 100%
    height: 200px
    background-color: $blue
    overflow: hidden
    display: flex
    justify-content: center
    align-items: center

    > img
      max-width: 100%

  &-name
    width: 100%
    color: $black
    text-align: center


.movie-card
  width: 182px
  padding: $generalPadding
  cursor: pointer
  margin: ($generalMargin * 2)

  &-poster
    width: 182px
    height: 268px
    overflow: hidden

    > img
      max-width: 100%

  &-name
    width: 100%
    color: $black
    text-align: center




/// DETAILS
.movie-detail
  width: 100vw
  height: 100vh
  background-image: linear-gradient( 35deg, rgba(0, 0, 0, 0.7) 40%, rgba(0, 0, 0, 0.2) 100%);

  &-header
    width: 100%
    height: 80px
    display: flex
    justify-content: space-between
    align-items: center
    flex-wrap: wrap
    color: $white
    padding-left: ($generalPadding * 3)
    padding-right: ($generalPadding * 3)
    box-sizing: border-box

  &-title
    font-family: 'Open sans'
    font-size: 2.3rem
    font-weight: 600

  &-data
    padding: ($generalPadding * 3)
    box-sizing: border-box

  &-shorts
    color: $white
    display: flex
    justify-content: flex-start

    > div
      display: block
      margin: ($generalMargin * 2)

      & > span
        font-weight: bold
      &:first-child
        margin-left: 0
      &:last-child
        margin-right: 0
  &-cast
    >h2
      margin-top: $generalMargin
      color: $white
    >div
      width: 44%
      display: flex
      justify-content: flex-start
      flex-wrap: wrap

  &-cast-mini
    width: 64px
    height: 64px
    margin: ($generalMargin * 2)
    cursor: pointer
    background-size: cover
    background-position: center

  &-plot
    color: $white

    > div
      width: 44%

      > span
        font-weight: bold

.image-bg
  position: absolute
  left: 0
  top: 0
  right: 0
  bottom: 0
  background-position: center
  background-size: cover
  z-index: -1
